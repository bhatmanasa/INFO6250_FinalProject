<hibernate-mapping>
    <class name="com.me.pojo.Message" table="message_table">
        <id name="messageId" column="messageId" type="int">
            <generator class="native" />
        </id>
        <property name="fromId" column="fromId" type="int" />
        <property name="toId" column="toId" type="int" />
        <property name="fromFirstName" column="fromFirstName" type="string" />
        <property name="toFirstName" column="toFirstName" type="string" />
        <property name="description" column="Description" type="string" />
        <property name="dateTime" column="Time" type="timestamp" />
    </class>
</hibernate-mapping>
